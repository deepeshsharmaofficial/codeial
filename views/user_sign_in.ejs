<link rel="stylesheet" href="/css/user_sign_default.css">

<div class="user-sign-container">
    <div class="container">
        <h2> Sign In </h2>
        <div class="inner-container">                 
            <form action="/users/create-session" method="post">
                <div class="form-container">
                    <input type="email" name="email" class="input-text" placeholder="Your Email" required>
                    <input type="password" name="password" class="input-text" placeholder="Password" required>
                    <input type="submit" value="Sign In" class="submit-btn">
                </div>
            </form>
            <hr>
            
            <div class="sign-container">
                <p>
                    Not a member?               
                    <a href="/users/sign-up">Sign Up</a>
                </p>

                <!-- <a href="/users/sign-up" class="anchor-btn">Create New Account</a> -->
            </div>

            <p>
                <a href="/users/auth/google">Continue with Google</a>
            </p>

            <p>
                <a href="/users/forgot-password">Forget your password?</a>
            </p>

        </div>
    </div>
</div>

