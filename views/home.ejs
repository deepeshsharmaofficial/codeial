<h1>
    Codeial / <%= title %>
</h1>

<section id="feed-posts">
    <h4>Posts</h4>
    <% if(locals.user) { %>
    <form action="/posts/create" id="new-post-form" method="post">
        <textarea name="content" id="" cols="30" rows="3" placeholder="Type Here..." required></textarea>
        <input type="submit" value="Post">
    </form>
    <% } %>

    <div id="posts-list-container">
        <ul>
            <% for (let i of post_list) { %>

            <li class="post-list-container">
                <p>
                    <% if(locals.user && locals.user.id == i.user.id) { %>
                    <small>
                        <a href="/posts/destroy/<%= i.id %>">X</a>
                    </small>
                    <% } %>

                    <%= i.content %>
                    <br>
                    <small>
                        <%= i.user.name %> 
                    </small>
                </p>
                <div class="post-comment-container">
                    <% if(locals.user) { %>
                    <form action="/comments/create" method="post">
                        <input type="text" name="content" placeholder="Type Here to add comment..." required>
                        <input type="hidden" name="post" value="<%= i._id %>">
                        <input type="submit" value="Add Comment">
                    </form>
                    <% } %>

                    <div class="post-comments-list">
                        <ul id="post-comments-<%= i._id %>">
                            <% for (comment of i.comments) { %>
                            <p>
                                <%= comment.content %>
                                <br>
                                <small>
                                    <%= comment.user.name %>
                                </small>
                            </p>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </li>

            <% } %>
        </ul>
    </div>
</section>