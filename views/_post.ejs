<link rel="stylesheet" href="/css/post.css">

<li id="post-<%= i._id %>" class="post-list-container">
    <p>
        <img src="<%= i.user.avatar %>" alt=" <%= i.user.name %> " width="50">
        <% if(locals.user && locals.user.id == i.user.id) { %>
        <small>
            <a class="delete-post-button" href="/posts/destroy/<%= i.id %>">X</a>
        </small>
        <% } %>
        <small>
            <%= i.user.name %>
        </small>
        <br>
        <%= i.content %>
    </p>
    <div class="post-comment-container">
        <% if(locals.user) { %>
        <form action="/comments/create" id="post-<%= i._id %>-comments-form" method="post">
            <input type="text" name="content" class="input-text" placeholder="Type Here to add comment..." required>
            <input type="hidden" name="post" value="<%= i._id %>">
            <input type="submit" value="Add Comment" class="submit-btn">
        </form>
        <% } %>

        <div class="post-comments-list">
            <ul id="post-comments-<%= i._id %>">
                <%for (comment of i.comments) {%>                 
                    <%-include('_comment')-%>
                <%}%>
            </ul>
        </div>
    </div>
</li>